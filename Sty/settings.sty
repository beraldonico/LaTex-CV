\usepackage[dvipsnames]{xcolor}  % Load xcolor package for color management
\definecolor{primaryColor}{RGB}{0, 0, 0}  % Define primary color as black
\definecolor{DetailsColor}{RGB}{140, 0, 170}  % Define details color, change as desired

\usepackage[  % Load geometry package for controlling page layout and margins
	ignoreheadfoot,  % Ignore the space for header and footer
	top = 1 cm,  % Set the top margin
	bottom = 1 cm,  % Set the bottom margin
	left = 1.5 cm,  % Set the left margin
	right = 1.5 cm,  % Set the right margin
	footskip = 0 cm,  % Set footskip (remove extra space below)
]{geometry}

\usepackage{tikz}  % Load TikZ package for creating graphics in LaTeX
\usetikzlibrary{calc}  % Load TikZ library for calculation and positioning
\usepackage{titlesec}  % Load titlesec package to customize section title formatting
\usepackage{enumitem}  % Load enumitem package to customize lists (itemize, enumerate)
\usepackage{fontawesome5}  % Load FontAwesome5 package to use icons in the document
\usepackage{paracol}  % Load paracol package to manage multiple columns
\usepackage{xstring}  % Load xstring package for string manipulation in LaTeX
\usepackage{pgffor}  % Load pgffor package to create loops
\usepackage{charter}  % Load Charter font family for better serif font style

\input{glyphtounicode}  % Include a file for converting glyphs to Unicode
\pdfgentounicode=1  % Ensure PDF outputs Unicode characters
\usepackage[T1]{fontenc}  % Set font encoding to T1 for better character representation
\usepackage[utf8]{inputenc}  % Use UTF-8 encoding for input text
\usepackage{lmodern}  % Use the Latin Modern font (a modern version of Computer Modern)
\usepackage[none]{hyphenat}  % Disable hyphenation to avoid unwanted word breaks
\usepackage{ragged2e}  % Load ragged2e to enable text justification
\justifying  % Enable text justification globally in the document

\pagestyle{empty}  % Set page style to empty (no headers or footers)
\setcounter{secnumdepth}{0}  % Set section numbering depth to 0 (no numbering for sections)
\setlength{\parindent}{0pt}  % Set paragraph indentation to 0 (no indentation)
\setlength{\topskip}{0pt}  % Set the top space (vertical space above the first line) to 0pt
\setlength{\columnsep}{0pt}  % Set the column separation to 0pt (no space between columns)

\titleformat  % Define the format for section titles
	{\section}  % Apply to sections
	{\bfseries\Large\color{DetailsColor}}  % Bold, large size, and DetailsColor
	{}  % No label before the section title
	{}  % No extra space between label and title
	{}  % No title formatting (default font size and style)
	[\titlerule]  % Add a rule (line) under the section title

\titlespacing{\section}{  % Adjust spacing before and after section titles
	0pt  % No space before section title
}{
	0pt  % No space after section title (before the content starts)
}{
	5pt  % Space after section title (between title and content)
}
